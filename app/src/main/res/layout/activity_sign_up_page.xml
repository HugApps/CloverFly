<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.cloverfly.cloverfly.cloverfly.SignUpPage"
    android:background="@drawable/bg_crystal"
    style="@style/AppTheme">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/stepfragments"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Registration"
            android:id="@+id/textView7"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/newemail"
            android:inputType="none"
            android:textColor="#6aacb4"

            android:background="#026d72"
            android:hint="Email"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:textColorHint="#ffffff"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:textColor="#527db4"
            android:id="@+id/newpassword"

            android:background="#026d72"
            android:hint="Password"
            android:paddingLeft="10dp"
            android:textColorHint="#ffffff"
            android:layout_below="@+id/newemail"
            android:layout_alignLeft="@+id/newemail"
            android:layout_alignStart="@+id/newemail"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Next ->"
            android:id="@+id/register"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:clickable="true"
            android:background="#ef9013"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/dob"
            android:layout_alignStart="@+id/dob"
            android:layout_marginBottom="59dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/logo_20150717"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/textView7" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:textColor="#527db4"
            android:id="@+id/confirmpword"

            android:background="#026d72"

            android:hint="Confirm Password"
            android:paddingLeft="10dp"
            android:textColorHint="#ffffff"
            android:layout_below="@+id/newpassword"
            android:layout_alignLeft="@+id/newpassword"
            android:layout_alignStart="@+id/newpassword"
            android:layout_marginTop="10dp" />
        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"

            android:ems="10"
            android:textColor="#527db4"
            android:id="@+id/fname"

            android:background="#026d72"

            android:hint="First Name"
            android:paddingLeft="10dp"
            android:textColorHint="#ffffff"
            android:layout_below="@+id/confirmpword"
            android:layout_alignLeft="@+id/confirmpword"
            android:layout_alignStart="@+id/confirmpword"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"

            android:ems="10"
            android:textColor="#527db4"
            android:id="@+id/lname"

            android:background="#026d72"

            android:hint="Last Name"
            android:paddingLeft="10dp"
            android:textColorHint="#ffffff"
            android:layout_below="@+id/fname"
            android:layout_alignLeft="@+id/fname"
            android:layout_alignStart="@+id/fname"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"

            android:ems="10"
            android:textColor="#527db4"
            android:id="@+id/dob"

            android:background="#026d72"

            android:hint="Date of Birth"
            android:paddingLeft="10dp"

            android:textColorHint="#ffffff"
            android:layout_below="@+id/lname"
            android:layout_alignLeft="@+id/lname"
            android:layout_alignStart="@+id/lname"
            android:layout_marginTop="10dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:textOff="Female"
            android:textOn="Male"
            android:textColor="#ffffff"
            android:text="Gender"
            android:layout_below="@+id/dob"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

</RelativeLayout>
