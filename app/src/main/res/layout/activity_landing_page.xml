<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"

     tools:context=".LandingPage"
    android:background="@drawable/bg_crystal"
    android:focusableInTouchMode="true"
   >

    <EditText
        android:gravity="left|center"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailfield"
        android:background="#026d72"
        android:height="40dp"
        android:width ="240dp"
        android:textSize="14dp"
        android:textColorHint="#5db0b4"
        android:fontFamily="Ariel"
        android:textColor="#5db0b4"
        android:hint="Email"
        android:textAlignment="center"
        android:ellipsize="middle"
        android:paddingTop="4dp"
        android:outlineProvider="paddedBounds"
        android:padding="4dp"
        android:layout_above="@+id/passwordfield"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp" />

    <EditText
        android:gravity="left|center"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordfield"
        android:background="#026d72"
        android:height="40dp"
        android:width = "240dp"
        android:textSize="14dp"
        android:fontFamily="Ariel"
        android:textColor="#5db0b4"
        android:hint="Password"
        android:typeface="normal"
        android:textColorHint="#5db0b4"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/emailfield"
        android:layout_alignStart="@+id/emailfield"
        android:paddingLeft="4dp"
        android:padding="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sign in"
        android:textSize="16dp"
        android:id="@+id/login"
        android:textColor="#ffffff"
        android:clickable="true"
        android:height="40dp"
        android:background="#ef9013"
        android:gravity="center"
        android:backgroundTint="#ef9013"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/passwordfield"
        android:layout_alignRight="@+id/passwordfield"
        android:layout_alignEnd="@+id/passwordfield"
        android:layout_alignLeft="@+id/passwordfield"
        android:layout_alignStart="@+id/passwordfield" />

    <com.facebook.login.widget.LoginButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fblogin"
        android:layout_below="@+id/imageView2"
        android:layout_alignRight="@+id/login"
        android:layout_alignEnd="@+id/login"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Register"
        android:id="@+id/signup"
        android:textSize="16dp"

        android:textColor="#ffffff"
        android:clickable="true"
        android:fontFamily="Ariel"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Recover Password"
        android:id="@+id/PassRecovery"
        android:visibility="visible"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_alignTop="@+id/signup"
        android:layout_alignRight="@+id/fblogin"
        android:layout_alignEnd="@+id/fblogin" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo_20150717"
        android:layout_above="@+id/emailfield"
        android:layout_alignLeft="@+id/emailfield"
        android:layout_alignStart="@+id/emailfield"
        android:layout_alignRight="@+id/emailfield"
        android:layout_alignEnd="@+id/emailfield"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/imageView2"
        android:src="@drawable/divider_20150719"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
